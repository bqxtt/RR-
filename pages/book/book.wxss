/* pages/book/book.wxss */
Page {
  height: 100%;
  position: fixed;
}

.van-swipe-cell__right {
  width: 65px;
  height: 65px;
  color: #0000ff;
}

.words-list {
  flex: 1;
  overflow-x: hidden;
  overflow-y: auto;
  height: 100%;
}

.words {
  display: flex;
  flex-direction: column;
  height: 90%;
  width: 100%;
  position: fixed;
}

.container {
  padding-top: 5px;
  padding-left: 10px;
  padding-right: 10px;
}

.book-name {
  font-size: 18px; 
  text-align: center;
  padding-top: 10px;
  padding-bottom: 10px;
  height: 8%;
  position: relative;
}

